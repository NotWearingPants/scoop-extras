{
    "version": "2017-12-04",
    "description": "Collection of paint.net effects by pyrochild",
    "homepage": "https://forums.getpaint.net/topic/7291-pyrochild-plugins",
    "license": "MIT",
    "depends": "paint.net",
    "url": "https://forums.getpaint.net/applications/core/interface/file/attachment.php?id=13067#/dl.zip",
    "hash": "dc05dd0604d64481ce44d35156a27ec2c6fb53b4a902aeb89cfe521cb0ef699c",
    "pre_install": [
        "$ef = Join-Path (appdir 'paint.net' $global) 'current\\Effects'",
        "(Get-ChildItem \"$dir\\*.dll\").Name | Out-File \"$dir\\plugins.txt\" -Encoding Ascii",
        "Copy-Item \"$dir\\*.dll\" $ef -Force"
    ],
    "uninstaller": {
        "script": "Get-Content \"$dir\\plugins.txt\" | Remove-Item -Path { Join-Path (appdir 'paint.net' $global) \"current\\Effects\\$_\" } -ErrorAction SilentlyContinue"
    }
}
